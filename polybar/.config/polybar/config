[colors]
background = #3b3b3b
foreground = #fff
foreground-alt = #c555
; Green
primary = #3ee57e
; Orange
secondary = #fe9e5b
alert = #f00
wallpaper = #3b3b3b

[bar/bottom]
background = ${colors.wallpaper}
foreground = ${colors.foreground}

width = 100%
height = 32

padding = 2

module-margin = 2

font-0 = "Source Code Pro for Powerline:pixelsize=10;2"
font-1 = "FontAwesome;3"
font-2 = "IPAGothic"

modules-left = xkeyboard
modules-right = player-mpris-tail battery temperature memory cpu filesystem

bottom = true

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 36
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00
padding-right = 2

module-margin = 1

font-0 = "Source Code Pro for Powerline:pixelsize=10;1"
font-1 = "FontAwesome;2"
font-2 = fixed:pixelsize=10;3
font-3 = unifont:fontformat=truetype:size=8:antialias=false;0
font-4 = siji:pixelsize=10;1

modules-left = i3
modules-center = isrunning-picom backlight volume
modules-right = vpn wlan eth date

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-foreground = ${colors.secondary}
label-layout-padding-right = 1
label-indicator-padding = 2
label-indicator-background = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
spacing = 3

mount-0 = /
mount-1 = /home

label-mounted = %{F#fe9e5b}%mountpoint%%{F-} %percentage_used%%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.secondary}
label-urgent-padding = 2

; Borked. It's always one step behind.
[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label =  %percentage%%
label-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%%
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.primary}
format-connected-padding = 2
label-connected = %essid%: %local_ip% @ %signal%%

[module/eth]
type = internal/network
interface = enp62s0u1
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.secondary}
format-connected-padding = 2
label-connected = %ifname%: %local_ip% @ %linkspeed%

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"

time = %H:%M:%S

label = %date% %time%

[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}
format-volume-underline = ${colors.primary}
format-volume-padding = 2

format-muted-foreground = ${colors.primary}
format-muted-padding = 2
label-muted =   muted

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%% @ %consumption%W

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% @ %consumption%W

format-full-prefix = " "
format-full-prefix-foreground = ${colors.primary}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-foreground = ${colors.secondary}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.primary}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

hwmon-path = /sys/devices/virtual/hwmon/hwmon2/temp1_input

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.secondary}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; Custom polybar scripts -----------------------------

[module/player-mpris-tail]
type = custom/script
exec = ~/.config/polybar/player-mpris-tail.py
tail = true

[module/isrunning-picom]
type = custom/script
exec = ~/.config/polybar/isrunning-picom.sh
format-padding = 2
interval = 5
click-left = ~/.config/polybar/isrunning-picom.sh --toggle

[module/vpn]
type = custom/script
exec = echo "OpenVPN: $(vpn-names)"
exec-if = nmcli | grep "VPN "
interval = 5
format-underline = ${colors.secondary}
format-foreground = ${colors.foreground}
format-padding = 2

